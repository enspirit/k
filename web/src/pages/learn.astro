import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const url = (path: string) => `${base}${path}`;
---

<Layout title="Learn Elo" activeNav="learn">
  <main class="learn-panel" data-controller="doc learn-progress">
    <aside class="learn-toc">
      <nav>
        <span class="toc-section">Basics</span>
        <a href="#lesson-1" data-learn-progress-target="tocLink"><span class="toc-check"></span>1. Playing with Numbers</a>
        <a href="#lesson-2" data-learn-progress-target="tocLink"><span class="toc-check"></span>2. Words, Words, Words</a>
