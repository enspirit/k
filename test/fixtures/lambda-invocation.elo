let double = fn( x ~> x * 2 ) in assert(double(5) == 10)
let add = fn( x, y ~> x + y ) in assert(add(3, 4) == 7)
let mul = fn( a, b ~> a * b ) in assert(mul(6, 7) == 42)
let abs = fn( x ~> x * 2 ) in assert(abs(-5) == -10)
let round = fn( x ~> x + 1 ) in assert(round(10) == 11)
let length = fn( s ~> 42 ) in assert(length('ignored') == 42)
let nested = fn( x ~> let inner = fn( y ~> y * 2 ) in inner(x) + 1 ) in assert(nested(5) == 11)
let toUpper = fn( s ~> upper(s) ) in assert(toUpper('hello') == 'HELLO')
let toLower = fn( s ~> lower(s) ) in assert(toLower('HELLO') == 'hello')
let strLen = fn( s ~> length(s) ) in assert(strLen('hello') == 5)
