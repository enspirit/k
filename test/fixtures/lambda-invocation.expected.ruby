(raise "Assertion failed" unless (double = ->(x) { x * 2 }; double.call(5)) == 10; true)
(raise "Assertion failed" unless (add = ->(x, y) { x + y }; add.call(3, 4)) == 7; true)
(raise "Assertion failed" unless (mul = ->(a, b) { a * b }; mul.call(6, 7)) == 42; true)
(raise "Assertion failed" unless (abs = ->(x) { x * 2 }; abs.call(-5)) == -10; true)
(raise "Assertion failed" unless (round = ->(x) { x + 1 }; round.call(10)) == 11; true)
(raise "Assertion failed" unless (length = ->(s) { 42 }; length.call("ignored")) == 42; true)
(raise "Assertion failed" unless (nested = ->(x) { (inner = ->(y) { y * 2 }; inner.call(x) + 1) }; nested.call(5)) == 11; true)
(raise "Assertion failed" unless (toUpper = ->(s) { s.upcase }; toUpper.call("hello")) == "HELLO"; true)
(raise "Assertion failed" unless (toLower = ->(s) { s.downcase }; toLower.call("HELLO")) == "hello"; true)
(raise "Assertion failed" unless (strLen = ->(s) { s.length }; strLen.call("hello")) == 5; true)
