assert(map([1, 2, 3], x ~> x * 2) == [2, 4, 6])
assert(map(['a', 'b'], s ~> s + '!') == ['a!', 'b!'])
assert(([1, 2, 3] |> map(x ~> x * 2)) == [2, 4, 6])
assert(([1, 2, 3] |> map(x ~> x + 10)) == [11, 12, 13])
assert((let double = x ~> x * 2 in double(5)) == 10)
assert((let add1 = x ~> x + 1 in map([1, 2, 3], add1)) == [2, 3, 4])
