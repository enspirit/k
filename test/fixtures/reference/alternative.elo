assert((42 | 0) == 42)
assert(('hello' | 'default') == 'hello')
assert((indexOf('hello', 'l') | -1) == 2)
assert((indexOf('hello', 'x') | -1) == -1)
assert((indexOf('hello', 'x') | indexOf('hello', 'z') | -1) == -1)
assert((indexOf('hello', 'x') | indexOf('hello', 'l') | -1) == 2)
assert((let x = 42 in x | 0) == 42)
