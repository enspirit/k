assert(typeOf(fn( ~> 42 )) == 'Function')
assert(typeOf(fn( ~> 2 * 3 )) == 'Function')
assert(typeOf(fn( x ~> x )) == 'Function')
assert(typeOf(fn( x ~> x * 2 )) == 'Function')
assert(typeOf(fn( x, y ~> x + y )) == 'Function')
assert(typeOf(fn( a, b, c ~> a + b + c )) == 'Function')
assert(typeOf(fn( x ~> x * x + 1 )) == 'Function')
assert(typeOf(fn( price ~> price * 1.21 )) == 'Function')
assert(typeOf(fn( _ ~> _.budget * 1.21 )) == 'Function')
assert(typeOf(fn( item ~> item.price + item.tax )) == 'Function')
assert(typeOf(fn( x ~> let doubled = x * 2 in doubled + 1 )) == 'Function')
assert(typeOf(fn( x ~> if x > 0 then x else 0 - x )) == 'Function')
assert((let double = fn( x ~> x * 2 ) in double(5)) == 10)
assert((let add = fn( x, y ~> x + y ) in add(3, 4)) == 7)
assert((let double = fn( x ~> x * 2 ) in double(2)) == 4)
